<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".domain.main.memomain.memoAdd.MemoAddFragment" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_memo_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_memo_show_memoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="제목"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0337F4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_memo_add_memoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey"
            android:ems="10"
            android:hint="제목을 입력하세요"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tv_memo_show_memoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="내용"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0337F4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_memo_add_memoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey"
            android:ems="10"
            android:hint="내용을 입력하세요"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

</LinearLayout>